@model Proyecto.Models.Proveedores

@{
    ViewData["Title"] = "Registrar Proveedor";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4"><i class="fas fa-handshake text-primary"></i> Registrar Proveedor</h2>

    <form asp-action="Create" class="form-card">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Contacto" class="form-label"></label>
            <input asp-for="Contacto" class="form-control" />
            <span asp-validation-for="Contacto" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-plus-circle"></i> Crear Proveedor
            </button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

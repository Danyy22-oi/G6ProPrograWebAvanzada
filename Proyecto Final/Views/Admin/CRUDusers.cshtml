@model IEnumerable<Proyecto_Final.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "CRUD de Usuarios";
}

<div class="container mt-5">
    <h2 class="text-center text-dark mb-4">
        <i class="fas fa-users-cog"></i> Gestión de Usuarios
    </h2>

    <div class="text-end mb-3">
        <a href="https://localhost:7082/Identity/Account/Register" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Crear Usuario
        </a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Departamento</th>
                <th>Acciones</th> <!-- Columna para los botones de acciones -->
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.RoleName</td>
                    <td>@user.Departamento</td>
                    <td> <!-- Columna para los botones Editar y Eliminar -->
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <!-- Formulario para eliminar usuario -->
                        <form method="post" action="@Url.Action("Delete", "Admin")" style="display:inline;">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm ms-2" onclick="return confirm('¿Estás seguro de eliminar este usuario?')">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-5">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Dashboard
        </a>
    </div>
</div>

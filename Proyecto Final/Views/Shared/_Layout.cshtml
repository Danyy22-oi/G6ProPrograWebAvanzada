<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Final</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_Final.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Frutiger&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <!-- Botón hamburguesa -->
    <button id="sidebarToggle" class="hamburger-btn fixed-hamburger">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div id="sidebarMenu" class="sidebar">
        <h4 class="text-center my-4">Menú</h4>
        <ul class="nav flex-column px-3">
            <li class="nav-item mb-2"><a asp-controller="Home" asp-action="Index" class="nav-link"><i class="fas fa-home"></i> Inicio</a></li>
            <li class="nav-item mb-2"><a asp-controller="Cateter" asp-action="Index" class="nav-link"><i class="fas fa-syringe"></i> Catéter</a></li>
            <li class="nav-item mb-2"><a asp-controller="Pruebas" asp-action="Index" class="nav-link"><i class="fas fa-vial"></i> Pruebas</a></li>
            <li class="nav-item mb-2"><a asp-controller="Documentos" asp-action="Index" class="nav-link"><i class="fas fa-file-medical"></i> Documentos</a></li>
            <li class="nav-item mb-2"><a asp-controller="Correcciones" asp-action="Index" class="nav-link"><i class="fas fa-tools"></i> Correcciones</a></li>
            <li class="nav-item mb-2"><a asp-controller="InformacionDepartamento" asp-action="Index" class="nav-link"><i class="fas fa-hospital"></i> Departamento</a></li>
            <li class="nav-item mt-4"><a asp-controller="Account" asp-action="Logout" class="btn btn-danger w-100">Cerrar Sesión</a></li>
        </ul>
    </div>

    <!-- Barra superior -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(to right, #007acc, #005c99); padding: 10px 20px;">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-heartbeat me-2"></i> MedImplants
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-controller="Productos" asp-action="Index">
                                <i class="fas fa-box-medical me-1"></i>Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-controller="Nosotros" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Nosotros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" href="#"><i class="fas fa-envelope me-1"></i>Contacto</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - Proyecto_Final - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebarMenu = document.getElementById('sidebarMenu');

        sidebarToggle.addEventListener('click', () => {
            sidebarMenu.classList.toggle('show');
        });

        const sidebarLinks = sidebarMenu.querySelectorAll('.nav-link');
        sidebarLinks.forEach(link => {
            link.addEventListener('click', () => {
                sidebarMenu.classList.remove('show');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

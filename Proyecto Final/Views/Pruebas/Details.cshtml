@model Proyecto.Models.Pruebas

@{
    ViewData["Title"] = "Detalles de Prueba";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4"><i class="fas fa-vial text-primary"></i> Detalles de la Prueba</h2>

    <div class="form-card">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Fecha)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PresionBalloon)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PresionBalloon)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InspeccionTactil)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.InspeccionTactil)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RupturaBalloon)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.RupturaBalloon)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Desinflado)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Desinflado)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cateter)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cateter.Id)</dd>
        </dl>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary"><i class="fas fa-edit"></i> Editar</a>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
        </div>
    </div>
</div>

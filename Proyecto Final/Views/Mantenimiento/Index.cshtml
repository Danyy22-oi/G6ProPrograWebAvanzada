@{
    ViewData["Title"] = "Mantenimiento Dashboard";
}

<div class="container mt-4 bg-mantenimiento">
    <h2 class="text-center mb-4">Bienvenido, Mantenimiento</h2>

    <!-- Ribbon de navegación -->
    <div class="d-flex justify-content-center bg-info p-3 rounded">
        <a asp-controller="Equipos" asp-action="Index" class="btn btn-light mx-2">Equipos</a>
        <a asp-controller="EstadoEquipos" asp-action="Index" class="btn btn-light mx-2">Estado Equipos</a>
    </div>

    <div class="text-center mt-4">
        <p>Has ingresado con éxito al panel de Mantenimiento.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ir al Inicio</a>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Cerrar Sesión</a>
    </div>
</div>

@{
    ViewData["Title"] = "Mantenimiento Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center text-info mb-4">
        <i class="fas fa-tools"></i> Bienvenido, Mantenimiento
    </h2>

    <div class="row justify-content-center g-4">
        <div class="col-auto">
            <a asp-controller="Equipos" asp-action="Index" class="custom-card-btn orange">
                <i class="fas fa-cogs"></i>
                <span>Equipos</span>
            </a>
        </div>
        <div class="col-auto">
            <a asp-controller="EstadoEquipos" asp-action="Index" class="custom-card-btn navy">
                <i class="fas fa-tachometer-alt"></i>
                <span>Estado Equipos</span>
            </a>
        </div>
    </div>

    <div class="text-center mt-5">
        <p>Has ingresado con éxito al panel de Mantenimiento.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-home"></i> Ir al Inicio
        </a>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
        </a>
    </div>
</div>

@model Proyecto.Models.Documentos

@{
    ViewData["Title"] = "Editar Documento";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4"><i class="fas fa-edit text-primary"></i> Editar Documento</h2>

    <form asp-action="Edit" enctype="multipart/form-data" class="form-card">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Archivo Actual</label>
            <div class="form-control-plaintext">@Model.Archivo</div>
        </div>

        <div class="mb-3">
            <label asp-for="Archivo" class="form-label">Subir nuevo archivo (opcional)</label>
            <input asp-for="Archivo" type="file" class="form-control" />
            <span asp-validation-for="Archivo" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UsuarioId" class="form-label">Usuario</label>
            <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            <span asp-validation-for="UsuarioId" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-create"><i class="fas fa-save"></i> Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

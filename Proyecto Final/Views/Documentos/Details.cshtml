@model Proyecto.Models.Documentos

@{
    ViewData["Title"] = "Detalles del Documento";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4 text-primary"><i class="fas fa-eye"></i> Detalles del Documento</h2>

    <div class="form-card">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Archivo)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Archivo)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Usuario)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Usuario.Id)</dd>
        </dl>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>

@model Proyecto.Models.EstadoEquipos

@{
    ViewData["Title"] = "Eliminar Estado";
}

<div class="form-wrapper">
    <h2 class="text-center text-danger mb-4"><i class="fas fa-trash-alt"></i> Eliminar Estado</h2>

    <p class="text-center fs-5">¿Estás seguro de que deseas eliminar este registro?</p>

    <div class="form-card">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

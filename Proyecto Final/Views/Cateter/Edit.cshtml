@model Proyecto.Models.Cateter

@{
    ViewData["Title"] = "Editar Catéter";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4"><i class="fas fa-pen text-primary"></i> Editar Catéter</h2>

    <form asp-action="Edit" class="form-card">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="TipoCateter" class="form-label"></label>
            <input asp-for="TipoCateter" class="form-control" />
            <span asp-validation-for="TipoCateter" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Material" class="form-label"></label>
            <input asp-for="Material" class="form-control" />
            <span asp-validation-for="Material" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Longitud" class="form-label"></label>
            <input asp-for="Longitud" class="form-control" />
            <span asp-validation-for="Longitud" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Diametro" class="form-label"></label>
            <input asp-for="Diametro" class="form-control" />
            <span asp-validation-for="Diametro" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UsoPrevisto" class="form-label"></label>
            <input asp-for="UsoPrevisto" class="form-control" />
            <span asp-validation-for="UsoPrevisto" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-create"><i class="fas fa-save"></i> Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

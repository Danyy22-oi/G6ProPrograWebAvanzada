@model IEnumerable<Proyecto.Models.Cateter>

@{
    ViewData["Title"] = "CateterIndex";
}

<h2><i class="fas fa-syringe text-primary"></i> Catéteres</h2>


<p>
    <a asp-action="Create" class="btn btn-create">
        <i class="fas fa-plus-circle"></i> Nuevo Catéter
    </a>
</p>

<table class="table table-rounded">


    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoCateter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsoPrevisto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCateter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diametro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsoPrevisto)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="action-btn">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn">Eliminar</a>
                </td>


        </tr>
}
    </tbody>
</table>

@model Proyecto.Models.Cateter

@{
    ViewData["Title"] = "Detalles del Catéter";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4 text-primary"><i class="fas fa-eye"></i> Detalles del Catéter</h2>

    <div class="form-card">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TipoCateter)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoCateter)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Material)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Material)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Longitud)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Longitud)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Diametro)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Diametro)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UsoPrevisto)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UsoPrevisto)</dd>
        </dl>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
        </div>
    </div>
</div>

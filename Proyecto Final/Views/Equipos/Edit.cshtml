@model Proyecto.Models.Equipos

@{
    ViewData["Title"] = "Editar Equipo";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4 text-primary"><i class="fas fa-edit"></i> Editar Equipo</h2>

    <form asp-action="Edit" class="form-card">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaMantenimientoPreventivo" class="form-label"></label>
            <input asp-for="FechaMantenimientoPreventivo" class="form-control" />
            <span asp-validation-for="FechaMantenimientoPreventivo" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaCalibracion" class="form-label"></label>
            <input asp-for="FechaCalibracion" class="form-control" />
            <span asp-validation-for="FechaCalibracion" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cantidad" class="form-label"></label>
            <input asp-for="Cantidad" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Ubicacion" class="form-label"></label>
            <input asp-for="Ubicacion" class="form-control" />
            <span asp-validation-for="Ubicacion" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DepartamentoId" class="form-label"></label>
            <select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.DepartamentoId"></select>
            <span asp-validation-for="DepartamentoId" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label asp-for="EstadoEquipoId" class="form-label"></label>
            <select asp-for="EstadoEquipoId" class="form-control" asp-items="ViewBag.EstadoEquipoId"></select>
            <span asp-validation-for="EstadoEquipoId" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-create"><i class="fas fa-save"></i> Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

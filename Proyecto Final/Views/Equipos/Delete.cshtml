@model Proyecto.Models.Equipos

@{
    ViewData["Title"] = "Eliminar Equipo";
}

<div class="form-wrapper">
    <h2 class="text-center text-danger mb-4">
        <i class="fas fa-trash-alt"></i> Eliminar Equipo
    </h2>

    <p class="text-center fs-5">¿Estás seguro de que deseas eliminar este registro?</p>

    <div class="form-card">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaMantenimientoPreventivo)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaMantenimientoPreventivo)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaCalibracion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCalibracion)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cantidad)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cantidad)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ubicacion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Ubicacion)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Departamentos)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Departamentos.Id)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EstadoEquipos)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.EstadoEquipos.Id)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

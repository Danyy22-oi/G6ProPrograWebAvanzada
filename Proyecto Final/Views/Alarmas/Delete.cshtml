@model Proyecto.Models.Alarmas

@{
    ViewData["Title"] = "Eliminar Alarma";
}

<div class="form-wrapper">
    <h2 class="text-center text-danger mb-4">
        <i class="fas fa-exclamation-triangle"></i> Eliminar Alarma
    </h2>

    <p class="text-center fs-5">¿Estás seguro de que deseas eliminar este registro?</p>

    <div class="form-card">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tipo)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Fecha)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Investigacion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Investigacion)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Pruebas)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Pruebas.Id)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

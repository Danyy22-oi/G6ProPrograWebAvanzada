@model Proyecto.Models.Correcciones

@{
    ViewData["Title"] = "Eliminar Corrección";
}

<div class="text-center">
    <h2 class="text-danger mt-4"><i class="fas fa-trash-alt"></i> Eliminar Corrección</h2>
    <p class="lead">¿Estás seguro que deseas eliminar esta corrección?</p>
</div>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <dl class="row mb-4">
            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-4">Fecha</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

            <dt class="col-sm-4">Pruebas</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Pruebas.Id)</dd>
        </dl>

        <form asp-action="Delete" class="d-flex justify-content-center gap-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
        </form>
    </div>
</div>

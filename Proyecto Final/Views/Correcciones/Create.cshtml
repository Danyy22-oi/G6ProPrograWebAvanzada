@model Proyecto.Models.Correcciones

@{
    ViewData["Title"] = "Crear Corrección";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4"><i class="fas fa-tools text-primary"></i> Registrar Corrección</h2>

    <form asp-action="Create" class="form-card">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PruebaId" class="form-label"></label>
            <select asp-for="PruebaId" class="form-control" asp-items="ViewBag.PruebaId"></select>
            <span asp-validation-for="PruebaId" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-create"><i class="fas fa-plus-circle"></i> Crear Corrección</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
